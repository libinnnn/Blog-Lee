<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lee.dao.TagDao">

    <select id="getById" resultType="com.lee.pojo.Tag">
        select * from blog.t_tag where id = #{id}
    </select>

    <insert id="saveTag" parameterType="com.lee.pojo.Tag">
        insert into blog.t_tag values (#{id},#{name});
    </insert>

    <select id="getByName" resultType="com.lee.pojo.Tag">
        select * from blog.t_tag where name = #{name}
    </select>

    <resultMap id="tags" type="com.lee.pojo.Tag">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="com.lee.pojo.Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
        </collection>
    </resultMap>

    <select id="getAllTag" resultMap="tags">
        select t.id tid,t.name,b.id bid,b.title from blog.t_tag t,blog.t_blog b, blog.t_blog_tags bt
        where t.id = bt.tag_id and b.id = bt.blog_id
    </select>

    <select id="getAdminTag" resultType="com.lee.pojo.Tag">
        select * from blog.t_tag
    </select>

    <delete id="deleteTag" >
        delete from blog.t_tag where id = #{id}
    </delete>

    <update id="updateTag" parameterType="com.lee.pojo.Tag">
        update blog.t_tag set name = #{name} where id = #{id};
    </update>


</mapper>